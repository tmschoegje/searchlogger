{
  "description": "Script for performing/logging search tasks",
  "manifest_version": 2,
  "name": "weblogger",
  "version": "1.0",

  "permissions": [
    "webRequest",
    "<all_urls>",
	"tabs",
	"storage",
	"alarms",
	"unlimitedStorage"
  ],
  
  "sidebar_action": {
    "default_icon": "icons/star-empty-38.png",
    "default_title" : "Search task toolbar",
    "default_panel": "sidebar/panel.html"
  },
  "browser_action": {
    "default_icon": "icons/star-empty-38.png",
    "default_title": "Bookmark it!"
  },

  "background": {
    "scripts": ["background.js"]
  }
}